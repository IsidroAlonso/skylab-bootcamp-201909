extends ../view/index

include ../feedback/index
include ../results/index
include ../result-item/index

block body
    section.view.search
        h1.search__title Search
        h2.search__user= name
        form(method="post" action=logout)
            button.search__logout Logout
        form.search__form(method="get" action=path)
            span.search__icon 🐣
            input.search__criteria(type="text" name="q" placeholder="criteria" value=query)
            button.search__submit 🔍
        if error
            +feedback(error)
        if results
            +results(items= results, onItemRender: duck => ResultItem({ item: duck, favPath, detailPath }) }) : '')

